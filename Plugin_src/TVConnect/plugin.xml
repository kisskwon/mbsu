<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.lge.mbsu.tvconnect"
  version="0.0.2"
  xmlns="http://apache.org/cordova/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <name>TVConnect</name>
  <js-module name="TVConnect"
    src="www/TVConnect.js">
    <clobbers target="cordova.plugins.TVConnect" />
  </js-module>
  <platform name="android">
    <config-file parent="/*"
      target="res/xml/config.xml">
      <feature name="TVConnect">
        <param name="android-package"
          value="com.lge.mbsu.tvconnect.TVConnect" />
        <param name="onload" value="true" />
      </feature>
    </config-file>
    <config-file parent="/*"
      target="AndroidManifest.xml"></config-file>
    <source-file src="src/android/TVConnect.java"
      target-dir="src/com/lge/mbsu/tvconnect" />
  </platform>
</plugin>